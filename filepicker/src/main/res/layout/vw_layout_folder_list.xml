<?xml version="1.0" encoding="utf-8"?>
<com.vincent.filepicker.view.MaxHeightLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mhl_folder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/picker_bar_background"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    app:mhl_HeightDimen="190dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scrollbarSize="3dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical" />

</com.vincent.filepicker.view.MaxHeightLayout>
