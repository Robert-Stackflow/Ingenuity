<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tb_pick"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/picker_bar_background_dark"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:onClick="onBackClick"
            android:scaleType="centerInside"
            android:src="@drawable/ic_light_arrow_left"
            app:tint="@color/color_selector_icon_light" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_back"
            android:textColor="@color/text_color_white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="选择文件" />

        <Button
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_round_dp3"
            android:backgroundTint="@color/color_selector_prominent"
            android:minWidth="48dp"
            android:minHeight="30dp"
            android:paddingLeft="16.0dp"
            android:paddingRight="16.0dp"
            android:stateListAnimator="@null"
            android:text="完成(0/3)"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_video_pick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb_pick"
        android:background="#000000"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="50dp" />

    <ProgressBar
        android:id="@+id/pb_video_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/ll_folder"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/picker_bar_background_dark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lines="1"
            android:maxWidth="120dp"
            android:maxLines="1"
            android:textColor="@color/text_color_white"
            android:textSize="16sp"
            tools:text="全部视频" />

        <ImageView
            android:id="@+id/iv_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_folder"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/tv_folder"
            android:src="@mipmap/text_indicator" />
    </RelativeLayout>
</RelativeLayout>
