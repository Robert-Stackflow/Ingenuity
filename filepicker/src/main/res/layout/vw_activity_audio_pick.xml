<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tb_pick"
        layout="@layout/vw_layout_top_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_audio_pick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb_pick"
        android:background="@color/content_background" />

    <RelativeLayout
        android:id="@+id/ll_folder"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/picker_bar_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lines="1"
            android:maxWidth="120dp"
            android:maxLines="1"
            android:textColor="@color/color_accent"
            android:textSize="16sp"
            tools:text="全部视频" />

        <ImageView
            android:id="@+id/iv_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_folder"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/tv_folder"
            android:src="@mipmap/text_indicator" />
    </RelativeLayout>
</RelativeLayout>
