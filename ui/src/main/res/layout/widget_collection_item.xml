<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/collection_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_dp5"
    android:backgroundTint="@color/reply_background"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp">

    <com.cloudchewie.ui.general.RoundImageView
        android:id="@+id/collection_item_image"
        android:layout_width="140dp"
        android:layout_height="@dimen/dp80"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default_background" />

    <com.cloudchewie.ui.custom.HorizontalIconTextItem
        android:id="@+id/collection_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/collection_item_thumbup"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_toEndOf="@id/collection_item_image"
        app:horizontal_icon_text_item_icon="@drawable/ic_light_account"
        app:horizontal_icon_text_item_icon_color="@color/color_gray"
        app:horizontal_icon_text_item_icon_size="@dimen/dp15"
        app:horizontal_icon_text_item_text_color="@color/color_gray"
        app:horizontal_icon_text_item_text_size="@dimen/sp11"
        tools:horizontal_icon_text_item_text="用户昵称" />

    <com.cloudchewie.ui.custom.HorizontalIconTextItem
        android:id="@+id/collection_item_thumbup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/collection_item_image"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/collection_item_image"
        app:horizontal_icon_text_item_icon="@drawable/ic_light_thumbup"
        app:horizontal_icon_text_item_icon_color="@color/color_gray"
        app:horizontal_icon_text_item_icon_size="@dimen/dp15"
        app:horizontal_icon_text_item_text_color="@color/color_gray"
        app:horizontal_icon_text_item_text_size="@dimen/sp11"
        tools:horizontal_icon_text_item_text="8.6万" />

    <com.cloudchewie.ui.custom.HorizontalIconTextItem
        android:id="@+id/collection_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/collection_item_image"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/collection_item_thumbup"
        app:horizontal_icon_text_item_icon="@drawable/ic_light_comment"
        app:horizontal_icon_text_item_icon_color="@color/color_gray"
        app:horizontal_icon_text_item_icon_size="@dimen/dp15"
        app:horizontal_icon_text_item_text_color="@color/color_gray"
        app:horizontal_icon_text_item_text_size="@dimen/sp11"
        tools:horizontal_icon_text_item_text="3236" />

    <TextView
        android:id="@+id/collection_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/collection_item_username"
        android:layout_alignStart="@id/collection_item_username"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_accent"
        android:textSize="13sp"
        tools:text="有时相信在某个平行的宇宙你的爱还一如既往陪在我左右有时相信在某个平行的宇宙你的相信在某个平行的宇宙你的爱还一如既往陪在我相信在某个平行的宇宙你的爱还一如既往陪在我爱还一如既往陪在我左右" />

    <ImageView
        android:id="@+id/collection_item_more"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        android:layout_alignBottom="@id/collection_item_image"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_light_ellipsis_vertical"
        android:tint="@color/color_gray"
        tools:ignore="UseAppTint" />
</RelativeLayout>