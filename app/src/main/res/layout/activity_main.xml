<?xml version="1.0" encoding="utf-8"?>
<com.cloudchewie.ui.shadow.ShadowRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cloudchewie.ui.bottombar.ReadableBottomBar
        android:id="@+id/activity_main_readable_bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:layout_alignParentBottom="true"
        app:rbb_activeItemType="icon"
        app:rbb_backgroundColor="@color/content_background"
        app:rbb_iconColor="?attr/colorPrimary"
        app:rbb_indicatorColor="?attr/colorPrimary"
        app:rbb_indicatorHeight="2.0dip"
        app:rbb_tabs="@xml/tabs"
        app:rbb_textColor="@color/color_accent" />

    <com.cloudchewie.ui.general.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_main_readable_bottom_bar" />
</com.cloudchewie.ui.shadow.ShadowRelativeLayout>
