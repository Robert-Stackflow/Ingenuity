<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cloudchewie.ui.custom.TitleBar
        android:id="@+id/activity_home_page_setting_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:transitionName="shareElement"
        app:right_button_visibility="false"
        app:title="设置" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/activity_home_page_setting_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_home_page_setting_titlebar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <com.cloudchewie.ui.custom.EntryItem
                android:id="@+id/entry_recommend_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:clickable="true"
                android:focusable="true"
                android:textSize="18sp"
                app:entry_item_bottom_radius_enable="true"
                app:entry_item_left_icon_visibility="false"
                app:entry_item_title="推荐用户"
                app:entry_item_top_radius_enable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_home_page_setting_user_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/entry_recommend_user">

                <com.cloudchewie.ui.general.CheckBoxItem
                    android:id="@+id/switch_special"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    app:checkbox_item_title="特别关心"
                    app:checkbox_item_top_radius_enable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.cloudchewie.ui.general.CheckBoxItem
                    android:id="@+id/switch_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    app:checkbox_item_bottom_radius_enable="true"
                    app:checkbox_item_title="加入黑名单"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/switch_special" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.cloudchewie.ui.custom.EntryItem
                android:id="@+id/entry_editinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:clickable="true"
                android:focusable="true"
                android:textSize="18sp"
                app:entry_item_bottom_radius_enable="true"
                app:entry_item_left_icon_visibility="false"
                app:entry_item_title="举报用户"
                app:entry_item_top_radius_enable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_home_page_setting_user_layout" />

            <com.cloudchewie.ui.custom.EntryItem
                android:id="@+id/entry_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:clickable="true"
                android:focusable="true"
                android:textSize="18sp"
                app:entry_item_bottom_radius_enable="true"
                app:entry_item_left_icon_visibility="false"
                app:entry_item_title="解除好友关系"
                app:entry_item_title_color="@color/text_color_red"
                app:entry_item_top_radius_enable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/entry_editinfo" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</RelativeLayout>