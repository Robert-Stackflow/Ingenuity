<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/favorites_detail_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/titlebar_background"
        android:fitsSystemWindows="true"
        android:transitionName="shareElement">

        <ImageButton
            android:id="@+id/favorites_detail_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back"
            android:scaleType="centerInside"
            android:src="@drawable/ic_light_arrow_left" />

        <TextView
            android:id="@+id/favorites_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/favorites_detail_search"
            android:layout_toEndOf="@id/favorites_detail_back"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:singleLine="true"
            android:src="@drawable/ic_light_arrow_left"
            android:text="收藏夹详情"
            android:textColor="@color/color_accent"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/favorites_detail_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/favorites_detail_more"
            android:background="@android:color/transparent"
            android:contentDescription="@string/more"
            android:scaleType="centerInside"
            android:src="@drawable/ic_light_search" />

        <ImageButton
            android:id="@+id/favorites_detail_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/more"
            android:scaleType="centerInside"
            android:src="@drawable/ic_light_ellipsis_vertical" />
    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/favorites_detail_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/favorites_detail_titlebar">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/favorites_detail_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/content_background"
            android:fadingEdge="none"
            android:fitsSystemWindows="true"
            app:elevation="0dp">

            <RelativeLayout
                android:id="@+id/favorites_detail_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect"
                android:backgroundTint="@color/content_background"
                android:paddingStart="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                app:layout_scrollFlags="scroll">

                <com.cloudchewie.ui.general.RoundImageView
                    android:id="@+id/favorites_detail_cover"
                    android:layout_width="140dp"
                    android:layout_height="@dimen/dp80"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_default_background" />

                <com.cloudchewie.ui.custom.HorizontalIconTextItem
                    android:id="@+id/favorites_detail_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/favorites_detail_cover"
                    android:layout_alignBottom="@id/favorites_detail_cover"
                    android:layout_marginEnd="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp5"
                    android:background="@drawable/shape_round_dp3"
                    android:backgroundTint="@color/dark_translucent"
                    android:paddingStart="4dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="2dp"
                    app:horizontal_icon_text_item_icon="@drawable/ic_light_integral"
                    app:horizontal_icon_text_item_icon_color="@color/text_color_white"
                    app:horizontal_icon_text_item_icon_size="10dp"
                    app:horizontal_icon_text_item_text="3"
                    app:horizontal_icon_text_item_text_color="@color/text_color_white"
                    app:horizontal_icon_text_item_text_size="@dimen/sp10" />

                <TextView
                    android:id="@+id/favorites_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/favorites_detail_cover"
                    android:singleLine="true"
                    android:textColor="@color/color_accent"
                    android:textSize="@dimen/sp17"
                    android:textStyle="bold"
                    tools:text="默认收藏夹" />

                <TextView
                    android:id="@+id/favorites_detail_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/favorites_detail_describe"
                    android:layout_alignStart="@id/favorites_detail_name"
                    android:layout_marginTop="20dp"
                    android:maxLines="2"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/sp12"
                    tools:text="创建者:余湍" />

                <TextView
                    android:id="@+id/favorites_detail_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/favorites_detail_name"
                    android:layout_alignBottom="@id/favorites_detail_cover"
                    android:ellipsize="end"
                    android:paddingBottom="@dimen/dp3"
                    android:singleLine="true"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/sp12"
                    tools:text="简介:主要收藏个人喜欢的一些影视、游戏、音乐赏析或解说" />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/favorites_detail_statistics_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/favorites_detail_banner"
                android:background="@drawable/shape_rect"
                android:backgroundTint="@color/content_background"
                android:padding="10dp">

                <com.cloudchewie.ui.custom.VerticalIconTextItem
                    android:id="@+id/favorites_detail_collection_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/favorites_detail_visitor_count"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:vertical_icon_text_item_checked_icon="@drawable/ic_light_star_fill"
                    app:vertical_icon_text_item_icon="@drawable/ic_light_star"
                    app:vertical_icon_text_item_icon_color="@color/color_accent"
                    app:vertical_icon_text_item_icon_size="@dimen/post_detail_entry_icon_size"
                    app:vertical_icon_text_item_text="收藏人数" />

                <com.cloudchewie.ui.custom.VerticalIconTextItem
                    android:id="@+id/favorites_detail_visitor_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/favorites_detail_thumbup_count"
                    app:layout_constraintStart_toEndOf="@id/favorites_detail_collection_count"
                    app:layout_constraintTop_toTopOf="parent"
                    app:vertical_icon_text_item_icon="@drawable/ic_light_visible"
                    app:vertical_icon_text_item_icon_color="@color/color_accent"
                    app:vertical_icon_text_item_icon_size="@dimen/post_detail_entry_icon_size"
                    app:vertical_icon_text_item_text="浏览人数" />

                <com.cloudchewie.ui.custom.VerticalIconTextItem
                    android:id="@+id/favorites_detail_thumbup_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/favorites_detail_visitor_count"
                    app:layout_constraintTop_toTopOf="parent"
                    app:vertical_icon_text_item_checked_icon="@drawable/ic_light_thumbup_fill"
                    app:vertical_icon_text_item_icon="@drawable/ic_light_thumbup"
                    app:vertical_icon_text_item_icon_color="@color/color_accent"
                    app:vertical_icon_text_item_icon_size="@dimen/post_detail_entry_icon_size"
                    app:vertical_icon_text_item_text="点赞人数" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/favorites_detail_content_divider"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/favorites_detail_statistics_layout"
                android:background="@color/color_divider" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.scwang.smart.refresh.layout.SmartRefreshLayout
                android:id="@+id/favorites_detail_swipe_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/favorites_detail_coordinator">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/favorites_detail_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.scwang.smart.refresh.layout.SmartRefreshLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>