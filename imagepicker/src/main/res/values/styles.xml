<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--SuperCheckbox的样式-->
    <style name="SuperCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/shape_checkbox_light</item>
    </style>
    <style name="BottomSuperCheckboxTheme" parent="SuperCheckboxTheme">
        <item name="android:button">@drawable/shape_checkbox</item>
    </style>
    <style name="popupwindow_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/show_from_bottom</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/hide_to_bottom</item>
    </style>
</resources>