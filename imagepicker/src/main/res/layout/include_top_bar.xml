<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/background"
    android:elevation="@dimen/dp2"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:contentDescription="@string/cd_image"
        android:id="@+id/btn_back"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_light_arrow_left"
        app:tint="@color/color_accent" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/btn_back"
        android:text="@string/ip_title"
        android:textColor="@color/color_accent"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_ok"
        android:contentDescription="@string/cd_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_round_dp3"
        android:backgroundTint="?attr/colorPrimary"
        android:minWidth="48dp"
        android:minHeight="30dp"
        android:paddingLeft="16.0dp"
        android:paddingRight="16.0dp"
        android:textColor="#ffffff"
        android:textSize="14sp"
        tools:ignore="RelativeOverlap" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_del"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="12dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_vector_delete" />
</RelativeLayout>